{
  "name": "dddd-alpha-extension",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "tsc --watch --pretty",
    "dev:popup": "vite build --watch",
    "build": "npm run check && tsc --pretty && vite build",
    "build:popup": "vite build",
    "build:ts": "tsc --pretty",
    "test": "vitest",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "zip": "cd extension && zip -r ../dddd-alpha-extension.zip . -x '*.DS_Store' && cd ..",
    "prepush": "npm run build && npm run zip"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@types/chrome": "^0.0.249",
    "@types/node": "^20.11.30",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@vitejs/plugin-react": "^5.0.4",
    "typescript": "^5.3.3",
    "vite": "^7.1.9",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "antd": "^5.27.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
