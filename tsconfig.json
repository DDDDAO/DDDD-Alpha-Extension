{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "extension/dist",
    "rootDir": "src",
    "jsx": "react-jsx",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["chrome"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@types": ["src/types"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "extension/dist", "src/popup"]
}
